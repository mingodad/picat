import os.

main =>
    traverse_dir(0, ".").

traverse_dir(Depth, Dir) =>
    Dirs = listdir(Dir),
    foreach (File in Dirs, File !== ".", File !== "..")
       FullName = Dir ++ "/" ++ File,
       if directory(FullName) then
           traverse_dir(Depth+1, FullName)
       else
           printf("%*s%s\n", 4*Depth, "", File)
       end
    end.
